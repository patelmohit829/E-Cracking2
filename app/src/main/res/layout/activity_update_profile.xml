<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_profile_layout"
    android:paddingBottom="5sp"
    android:weightSum="1"
    android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="0.67">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_icon"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:layout_centerHorizontal="true" />


                    <ProgressBar
                        android:id="@+id/linlaHeaderProgress2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                    </ProgressBar>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"
                android:paddingTop="5dp"
                android:layout_weight="0.33">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.2">

                    <EditText
                        android:id="@+id/name_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:inputType="textCapWords"
                        android:hint="Name(Cannot be changed afterwards)" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:weightSum="1"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp">

                            <Spinner
                                android:id="@+id/class_text1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:spinnerMode="dialog" />


                    </LinearLayout>



                    <EditText
                        android:id="@+id/school_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLines="1"
                        android:maxLength="40"
                        android:digits=" 0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,-/.():;\"
                        android:inputType="textCapWords"
                        android:hint="School" />

                    <EditText
                        android:id="@+id/father_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLines="1"
                        android:maxLength="25"
                        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:inputType="textCapWords"
                        android:hint="Father's Name" />

                    <EditText
                        android:id="@+id/mother_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLines="1"
                        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="25"
                        android:inputType="textCapWords"
                        android:hint="Mother's Name" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:weightSum="1"
                        android:background="@drawable/button_background"
                        android:orientation="vertical"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp">
                        <Spinner
                            android:id="@+id/gender_text1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:spinnerMode="dialog"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>


                    <EditText
                        android:id="@+id/contact_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="1sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLines="1"
                        android:maxLength="14"
                        android:text="+91-"
                        android:inputType="phone"
                        android:hint="Contact number" />

                    <EditText
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLines="1"
                        android:focusable="false"
                        android:maxLength="40"
                        android:inputType="textWebEmailAddress"
                        android:hint="E-mail address" />

                    <EditText
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:paddingLeft="20sp"
                        android:background="@drawable/button_background"
                        android:textSize="16sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:textColor="@color/hint_text_black"
                        android:textColorHint="@color/accent"
                        android:maxLines="1"
                        android:maxLength="100"
                        android:digits=" 0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,-/.():;\"
                        android:inputType="textCapWords"
                        android:hint="Address" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <Button
                        android:id="@+id/update_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:layout_gravity="center"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="     Update     "
                        android:textSize="16sp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#009ECE"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>