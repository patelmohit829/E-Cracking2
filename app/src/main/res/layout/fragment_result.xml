<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/result_layout"
    tools:context="com.ingenium.ingenium.ingeniumeomr.TestFragment">

    <!-- TODO: Update blank fragment layout -->



        <ProgressBar
            android:id="@+id/linlaHeaderProgress2"
            android:layout_weight=".3"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_height="wrap_content" >
        </ProgressBar>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:padding="20dp"
        android:layout_weight=".4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:textSize="30dp"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:longClickable="false"
            android:layout_gravity="center"
            android:hint="Your result"
            android:textStyle="normal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight=".1"
            android:textColor="@color/grey"
            android:background="@drawable/button_background"
            android:inputType="textCapCharacters"
            android:paddingLeft="20dp"
            android:id="@+id/studentTestIDresult"
            android:maxLength="10"
            android:hint="Enter ID"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_next"
            android:id="@+id/submitIDresult"
            android:onClick="generate"
            android:layout_below="@+id/studentTestIDresult"
            android:layout_centerHorizontal="true" />

    </LinearLayout>




</LinearLayout>