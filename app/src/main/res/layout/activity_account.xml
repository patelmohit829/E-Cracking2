<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    tools:context="com.example.mohit.e_cracking.AccountActivity"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:layout_height="672dp">


    <TextView
        android:text="Question No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/questionId"
        android:textSize="30sp"
        android:textColor="#00D1A7" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:id="@+id/retrieve"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="90dp"
        android:layout_height="200dp"
        android:id="@+id/radioGroup"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/questionId"
        android:layout_centerHorizontal="true">


        <RadioButton
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"
            />
        <RadioButton
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_below="@+id/radioButton"
            android:layout_alignEnd="@+id/radioButton"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp" />
        <RadioButton
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_below="@+id/radioButton2"
            android:layout_alignStart="@+id/radioButton2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp" />
        <RadioButton
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:gravity="center"
            android:layout_below="@+id/radioButton3"
            android:layout_alignStart="@+id/radioButton3"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp" />
    </RadioGroup>

    <Button
        android:text=">>>"
        android:id="@+id/nextButton"
        android:onClick="next"
        android:background="@drawable/button"
        android:textColor="#00D1A7"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/previousButton"
        android:layout_alignBottom="@+id/previousButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="&lt;&lt;&lt;"
        android:id="@+id/previousButton"
        android:background="@drawable/button"
        android:onClick="previous"
        android:textColor="#00D1A7"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:onClick="submit"
        android:layout_alignTop="@+id/nextButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
</ScrollView>
